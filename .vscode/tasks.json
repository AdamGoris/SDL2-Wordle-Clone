{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "SDL2",
			"command": "C:\\msys64\\mingw64\\bin\\g++.exe",
			"args": [
				"-g",
				"src\\*.cpp",
				"-o",
				"build\\game.exe",
				"-IC:/msys64/mingw64/include/SDL2",
				"-LC:/msys64/mingw64/lib",
				"-I.\\src\\include",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2",
				"-lSDL2_ttf",
				"-mwindows"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}